@import 'include/mixins'

.p-about 
  width: 100%
  height: 100%

  min-width: 960px
  min-height: 400px

  margin: 0 auto

  position: relative

  .p-a-bg-wrap 
    width: 100%
    height: 100%

    position: absolute
    top: 0
    left: 0

    overflow: hidden

    .p-a-bg-container 
      width: 200%
      height: 200%

      position: absolute
      left: -50%
      top: -50%

      .p-a-bg-img 
        min-width: 50%
        min-height: 50%

        margin: auto 

        position: absolute 
        left: 0 
        top: 0 
        right: 0 
        bottom: 0 
      
  .p-a-content
    width: 600px
    margin-left: -320px
    margin-top: -200px

    position: absolute
    left: 50%
    top: 50%

    text-align: center

    .p-a-details
      padding: 15px 20px

      border-radius: 5px
      background: #333
      background: rgba(0, 0, 0, .4)

      color: #eee

      text-shadow: 0 -1px 0 rgba(0, 0, 0, .6)

      .p-a-title
        font-size: 36px
        line-height: 48px
      .p-a-subtitle
        font-size: 16px
        line-height: 24px

      .p-a-concept
        margin-top: 10px
        font-size: 14px
        line-height: 22px

        text-align: left

    .p-i-extras
      padding-top: 20px
