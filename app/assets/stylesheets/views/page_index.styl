@import 'include/mixins'

.p-index 
  width: 100%
  height: 100%

  min-width: 960px
  min-height: 400px

  margin: 0 auto

  position: relative

  .p-i-bg-wrap 
    width: 100%
    height: 100%

    position: absolute
    top: 0
    left: 0

    overflow: hidden

    .p-i-bg-container 
      width: 200%
      height: 200%

      position: absolute
      left: -50%
      top: -50%

      .p-i-bg-img 
        min-width: 50%
        min-height: 50%

        margin: auto

        position: absolute
        left: 0
        top: 0
        right: 0
        bottom: 0
      
  .p-i-content
    width: 960px
    margin-left: -480px
    margin-top: -300px

    position: absolute
    top: 50%
    left: 50%

    overflow: hidden

    .p-i-phone
      width: 250px
      height: 560px
      float: left

      position: relative

      .p-i-p-crop
        width: 211px
        height: 375px

        overflow: hidden

        position: absolute
        left: 20px
        top: 78px

      .p-i-p-front
        position: relative
        z-index: 3

    .p-i-desc
      width: 640px
      float: right

      background: #eee
      background: rgba(255, 255, 255, .5)
